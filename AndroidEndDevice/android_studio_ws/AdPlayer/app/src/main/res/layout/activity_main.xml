<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skynet.adplayer.activities.MainActivity">

    <!-- static text display layout -->
    <RelativeLayout
        android:id="@+id/static_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:paddingTop="@dimen/sroll_text_size"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/static_text_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff0000"
            android:textSize="@dimen/static_text_title_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/static_text_line1"
            android:layout_below="@+id/static_text_title"
            android:layout_alignParentStart="true"
            android:textColor="#ff0000"
            android:textSize="@dimen/static_text_line_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/static_text_line2"
            android:layout_below="@+id/static_text_line1"
            android:layout_alignParentStart="true"
            android:textColor="#ff0000"
            android:textSize="@dimen/static_text_line_font_size"/>
    </RelativeLayout>

    <!-- AD content display area -->
    <RelativeLayout
        android:id="@+id/image_display_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_display_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/zero"
            android:background="@drawable/welcome"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R0000123"
            android:id="@+id/admachine_id_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/admachine_id_text_font_size"/>

    </RelativeLayout>

    <!-- text marquee in the top of screen -->
    <HorizontalScrollView
        android:id="@+id/scrollTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:paddingTop="0dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是一个希望滚动的文本条啊文本条"
            android:id="@+id/textScrolling"
            android:textSize="@dimen/sroll_text_size"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FFFFFFFF"
            android:layout_alignParentTop="true"/>
    </HorizontalScrollView>

    <!-- buttons for settings -->
    <LinearLayout
        android:id="@+id/config_buttons_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_below="@+id/scrollTextLayout"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnTestNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="测试网络"
            android:visibility="visible"/>
        <Button
            android:id="@+id/btnUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="升级" />
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="设置" />
    </LinearLayout>

    <!-- icons for statues -->
    <LinearLayout
        android:id="@+id/flag_icons_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offlineFlag"
            android:src="@drawable/broken" />
    </LinearLayout>

    <!-- bottom status bar -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_info_bar"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:id="@+id/bottom_info_title"
            android:layout_weight="1" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/bottom_info_ratio"
            android:layout_weight="100" />
    </LinearLayout>

</RelativeLayout>
